<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/policiesPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Policies and Terms"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Shipping Policy Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/shippingPolicyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Policy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shippingPolicyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="We offer fast and secure delivery services. Delivery time depends on your delivery address. Orders will be processed and shipped within 24 hours." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• Free shipping for orders over 500,000 VND." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• Delivery within 2-5 working days for domestic areas." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• International delivery may take 7-10 working days." />
    </LinearLayout>

    <!-- Terms and Conditions Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/termsPolicyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/termsPolicyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="By using our services, you agree to the following terms:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• We reserve the right to change or update these terms without prior notice." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• You must provide accurate information when creating an account or making a purchase." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• We are not responsible for any issues occurring during the shipping process." />
    </LinearLayout>

    <!-- Privacy Policy Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/privacyPolicyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/privacyPolicyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="We are committed to protecting the privacy and personal information of our customers:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• Your information will only be used for order processing purposes." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• We do not share your personal information with third parties without your consent." />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="• All transactions are secured with SSL encryption." />
    </LinearLayout>

    <TextView
        android:id="@+id/textPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
